.container
  .page-header
    h1 Matching
.container.top-padding-med
  div(class="row")
    div(class="col-md-6")
      .panel.panel-default(ng-class="{busy: busy()}")
        .panel-heading.clearfix Adopters    
        .panel-body
            div(data-adopter-search)
      .panel.panel-default(ng-class="{busy: busy()}")
        .panel-heading.clearfix Adopter Results
        .panel-body
            div(adopter-match-results)
            div(data-criteriaset, ng-if="criteria", data-criteria="criteria", data-enums="adopterEnums")
    div(class="col-md-6")
      .panel.panel-default(ng-class="{busy: busy()}")
        .panel-heading.clearfix Adoptee Results
        .panel-body
            div(adoptee-search-results)
            div(adoptee-criteria)
