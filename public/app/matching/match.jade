.container
  .page-header
    h1 Matching
.container.top-padding-med
  div(class="row")
    div(class="col-md-6")
      .panel.panel-default(ng-class="{busy: busy()}")
        .panel-heading.clearfix Adopters    
        .panel-body
            div(data-adopter-search)
      .panel.panel-default(ng-class="{busy: busy()}")
        .panel-heading.clearfix Adopter Results
        .panel-body
            div(adopter-match-results)
            div(data-criteriaset, ng-if="adopter.criteria", data-criteria="adopter.criteria", data-enums="adopter.enums")
    div(class="col-md-6")
      .panel.panel-default(ng-class="{busy: busy()}")
        .panel-heading.clearfix Adoptee Matches
        .panel-body
            div(adoptee-search-results)
        .panel-body
            div(adoptee-criteria)
