.panel.panel-default(ng-if="currentAdopter.criteria")
  .panel-heading.clearfix
    .pull-right
      .label.label-default {{currentAdopter.criteria.count - currentAdopter.adoptees.length || ''}}
      | &nbsp;
      .label(class="{{currentAdopter.status == 'Matched' && 'label-success' || 'label-warning'}}") {{currentAdopter.status}}
    .panel-title {{currentAdopter.name}}
  .panel-body
    div(data-criteriaset, data-criteria="currentAdopter.criteria", data-enums="currentAdopter.enums")
    div(ng-controller="AdopterAdopteeCtrl", ng-include="template.adopteeListUrl")
  .panel-footer
    btn-toolbar.pull-right
      button.btn.btn-primary(ng-click="emailAdopter(currentAdopter)" data-ng-if="currentAdopter.email") Email
      | &nbsp;
      button.btn.btn-primary(ng-click="printAdopter(currentAdopter)") Print
    btn-toolbar
      button.btn.btn-default(ng-click="getNextAdopter()") Next Adopter
